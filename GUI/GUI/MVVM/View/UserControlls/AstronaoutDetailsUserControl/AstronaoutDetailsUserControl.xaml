<UserControl x:Class="GUI.MVVM.View.UserControlls.AstronaoutDetailsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.MVVM.View.UserControlls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock
                                                   VerticalAlignment="Center" Foreground="Black" Background="Yellow" Height="50" Width="100"
                                                 
                                                   Text="{Binding   Astronaut.name}"
                                                   TextWrapping="Wrap" />
        <TextBlock
                                                   VerticalAlignment="Center" Foreground="WhiteSmoke"
                                                 
                                                   Text="{Binding   name}"
                                                   TextWrapping="Wrap" />
    </Grid>
</UserControl>
